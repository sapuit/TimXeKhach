<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:stretchColumns="*"
        android:layout_marginTop="5dp"
        android:background="#ffffff">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_bus"
                    />
                <TextView
                    android:id="@+id/txtTenNhaXe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:singleLine="true"
                    android:text="Tên nhà xe"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:paddingLeft="4dp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/txtThoiGian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9:00 - 22:00"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12dp"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/txtGiaVe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="128.000 đ"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_gravity="bottom"/>
        </TableRow>

        <TableRow
            android:paddingTop="2dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtDiaDiem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:maxEms="12"
                android:paddingTop="5dp"
                android:text="Bến xe Bồng sơn - Bến xe Miền đông "
                android:textSize="12dp" />

            <Button
                android:id="@+id/btnSDT"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:text="Điện thoại"
                android:layout_gravity="right"
                android:background="@color/colorAccent"
                android:textSize="12dp"
                android:allowUndo="false"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>